<Window x:Class="LibAid_Frontend.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="First Name" />
        <TextBox x:Name="FirstNameBox" Margin="0 0 0 10"/>

        <TextBlock Text="Last Name" />
        <TextBox x:Name="LastNameBox" Margin="0 0 0 10"/>

        <Button Content="Add User" Click="AddUser_Click"/>
    </StackPanel>
</Window>
