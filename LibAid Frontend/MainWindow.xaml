<Window x:Class="LibAid_Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibAid - Main Menu"
        Height="380"
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Add User"
                    Click="AddUser_Click"
                    Width="200"
                    Height="40"
                    Margin="0 5"/>

            <Button Content="Add Book"
                    Click="AddBook_Click"
                    Width="200"
                    Height="40"
                    Margin="0 5"/>

            <Button Content="View Database"
                    Click="ViewDatabase_Click"
                    Width="200"
                    Height="40"
                    Margin="0 5"/>

            <Button Content="Undo Last Action"
                    Click="Undo_Click"
                    Width="200"
                    Height="40"
                    Margin="0 5"/>

            <Button Content="Exit Program"
                    Click="Exit_Click"
                    Width="200"
                    Height="40"
                    Margin="0 5"
                    Background="#c0392b"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
