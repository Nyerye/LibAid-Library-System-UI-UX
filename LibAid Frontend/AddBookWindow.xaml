<Window x:Class="LibAid_Frontend.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Book" Height="220" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Title" />
        <TextBox x:Name="TitleBox" Margin="0 0 0 10"/>

        <TextBlock Text="Author" />
        <TextBox x:Name="AuthorBox" Margin="0 0 0 10"/>

        <Button Content="Add Book" Click="AddBook_Click"/>
    </StackPanel>
</Window>
