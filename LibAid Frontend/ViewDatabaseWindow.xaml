<Window x:Class="LibAid_Frontend.ViewDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibAid - View Database"
        Height="500"
        Width="650"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 15">
            <Button Content="View Users"
                    Click="ViewUsers_Click"
                    Width="140"
                    Height="40"
                    Margin="10"/>
            <Button Content="View Books"
                    Click="ViewBooks_Click"
                    Width="140"
                    Height="40"
                    Margin="10"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="OutputBox"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     FontFamily="Consolas"
                     FontSize="14"
                     Padding="12"
                     MinHeight="350"
                     BorderThickness="1"
                     BorderBrush="#CCC"
                     Background="#F8F8F8"
                     ContextMenuOpening="OutputBox_ContextMenuOpening"
                     MouseRightButtonUp="OutputBox_MouseRightButtonUp"/>
        </ScrollViewer>
    </Grid>
</Window>
